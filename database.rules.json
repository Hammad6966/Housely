{
  "rules": {
    "users": {
      "$userId": {
        ".read": true,
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    
    "properties": {
      ".read": true,
      "$propertyId": {
        ".write": "auth != null && (!data.exists() || data.child('ownerId').val() == auth.uid)",
        ".validate": "newData.hasChildren(['title', 'ownerId']) && newData.child('ownerId').val() == auth.uid"
      }
    },
    
    "images": {
      ".indexOn": ["userId", "referenceId", "createdAt"],
      "$imageId": {
        ".read": "auth != null && (data.child('userId').val() == auth.uid || root.child('properties').child(data.child('referenceId').val()).exists())",
        ".write": "auth != null && ((!data.exists() && newData.child('userId').val() == auth.uid) || (data.exists() && data.child('userId').val() == auth.uid))",
        ".validate": "newData.hasChildren(['imageUrl', 'userId', 'createdAt']) && newData.child('userId').val() == auth.uid && newData.child('imageUrl').isString() && newData.child('createdAt').isNumber()"
      }
    },
    
    "saved": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    
    "chats": {
      "$chatId": {
        ".read": "auth != null && data.child('participants').child(auth.uid).exists()",
        ".write": "auth != null && (!data.exists() || data.child('participants').child(auth.uid).exists())"
      }
    },
    
    ".read": false,
    ".write": false
  }
}
